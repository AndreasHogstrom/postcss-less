{
    "env": {
        "commonjs": true,
        "mocha": true,
        "es6": true,
        "node": true
    },

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

    "extends": "eslint:recommended",

    "rules": {
        "semi": [2, "always"],
        "no-extra-semi": 0,
        "no-console": 0,
        "no-debugger": 0,
        "no-undef": 0,
        "semi-spacing": [2, {"before": false, "after": true}],
        "quotes": [2, "single", "avoid-escape"]
    }
}